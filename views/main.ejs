<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>컴숍</title>
</head>
<style>
    .main {
        width: 100%;
        height: 100%;
    }

    .mimg {
        width: 300px;
        height: 305px;
    }
</style>

<body>
    <div class="main">
        <form style="text-align:center;" action="/inquire" method="POST">
                <input style="width:300px; height:30px; border-radius: 5px;" type="search" name="inquire" size="30" maxlength="35">
                <button style="height: 30px; border-radius: 10px;" type="submit" id="search">검색</button>
        </form>
        <!-- <select id="pkind" name="pkind" size="1" action="/kinds" method="POST">
            <option>종류</option>
            <option value="컴퓨터">컴퓨터</option>
            <option value="노트북">노트북</option>
            <button style="height: 30px; border-radius: 10px;" type="submit" id="pkind">검색</button>
        </select> -->
        <%for(var i=0;i<data.length; i++) { %>
        <div style="float: left; width: 300px; margin: 6%;">
            <div><a href="/detail/<%=data[i].pid%>"><img src="/<%=data[i].pimg%>" class="mimg" alt="상품이미지" /></a></div>
            <div><a style="text-decoration: none; color: black;" href="/detail/<%=data[i].pid%>">
                    <h2><%=data[i].pname%></h2>
                </a></div>
            <div>
                <h2>모델명 : <%=data[i].pid%></h2>
            </div>
            <div>
                <h2>가격 : <%=data[i].pprice%> 원</h2>
            </div>
            <div>
                <a href="/review/<%=data[i].pid%>" ><h2>리뷰보기</h2></a>
            </div>
        </div>
        <% } %>
    </div>
</body>

</html>